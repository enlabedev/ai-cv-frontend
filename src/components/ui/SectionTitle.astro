---
interface Props {
  title: string;
  subtitle: string;
}

const { title, subtitle } = Astro.props;
---

<div class="flex flex-col items-center gap-4 mb-16">
  <div class="flex items-center gap-2 bg-gray-100 dark:bg-gray-800 px-4 py-2 rounded-full text-sm font-medium text-gray-600 dark:text-gray-300 shadow-sm border border-gray-100 dark:border-gray-700">
    <slot name="icon" /> {subtitle}
  </div>
  <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white">
    {title}
  </h2>
</div>