---
interface Props {
  variant: '1' | '2' | '3';
  className?: string;
}

const { variant, className = "" } = Astro.props;

const variantStyles = {
  '1': "-top-24 -left-24 bg-brand-light dark:bg-gray-800",
  '2': "top-0 -right-4 bg-brand-blue/20 dark:bg-gray-700 animation-delay-2000",
  '3': "-bottom-32 left-20 bg-brand-red/20 dark:bg-gray-800 animation-delay-4000"
};
---

<div class={`blob blob-${variant} ${variantStyles[variant]} ${className}`} aria-hidden="true"></div>