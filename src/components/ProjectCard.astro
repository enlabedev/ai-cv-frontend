---
import { Image } from 'astro:assets';
import Badge from './ui/Badge.astro';
import type { ImageMetadata } from 'astro';

export interface Props {
  title: string;
  description: string;
  image: ImageMetadata;
  tags: string[];
  bgColor?: string;
}

const { title, description, image, tags, bgColor = "bg-white" } = Astro.props;
---

<div class={`${bgColor} dark:bg-gray-800 rounded-2xl p-6 md:p-12 shadow-sm border border-gray-100 dark:border-gray-700 flex flex-col md:flex-row gap-8 items-center`}>
  <div class="w-full md:w-1/2 rounded-xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow bg-gray-200 dark:bg-gray-700">
     <Image 
      src={image} 
      alt={title} 
      width={600}
      class="w-full h-auto object-cover hover:scale-105 transition-transform duration-500"
      loading="lazy" 
      decoding="async"
     />
  </div>
  <div class="w-full md:w-1/2 space-y-4">
    <div>
       <h3 class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white mb-2">{title}</h3>
       <p class="text-gray-600 dark:text-gray-400 leading-relaxed">
         {description}
       </p>
    </div>
    
    <div class="flex flex-wrap gap-2 pt-2">
       {tags.map(tag => <Badge text={tag} />)}
    </div>
  </div>
</div>