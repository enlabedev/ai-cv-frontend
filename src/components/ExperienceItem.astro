---
interface Props {
  title: string;
  company: string;
  period: string;
  description: string;
  isLeft?: boolean;
}

const { title, company, period, description, isLeft = false } = Astro.props;
---
<div class="relative flex flex-col md:flex-row items-center justify-between mb-8 md:mb-12 group last:mb-0">
  <div class="absolute left-4 md:left-1/2 w-4 h-4 bg-gray-200 dark:bg-gray-700 rounded-full border-4 border-white dark:border-gray-900 transform -translate-x-1.5 md:-translate-x-1/2 z-10 group-hover:bg-brand-blue transition-colors duration-300"></div>
  
  <div class={`w-full md:w-[calc(50%-2rem)] ${isLeft ? 'md:text-right pl-12 md:pl-0 pr-0 md:pr-8' : 'hidden md:block invisible'}`}>
    {isLeft && (
      <div class="bg-brand-light dark:bg-gray-800 p-6 rounded-2xl shadow-sm border border-gray-100 dark:border-gray-700 hover:shadow-md transition-all duration-300 transform hover:-translate-y-1">
        <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-1">{title}</h3>
        <div class="flex flex-wrap items-center gap-x-4 gap-y-2 text-sm text-gray-500 dark:text-gray-400 mb-4 md:justify-end">
          <span class="flex items-center gap-1 font-semibold text-brand-blue">
            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-red-500"><path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/><circle cx="12" cy="10" r="3"/></svg>{company}</span>
          <span class="flex items-center gap-1">
            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-red-500"><rect width="18" height="18" x="3" y="4" rx="2" ry="2"/><line x1="16" x2="16" y1="2" y2="6"/><line x1="8" x2="8" y1="2" y2="6"/><line x1="3" x2="21" y1="10" y2="10"/></svg>{period}</span>
        </div>
        <p class="text-gray-600 dark:text-gray-400 leading-relaxed">{description}</p>
      </div>
    )}
  </div>
  
  <div class={`w-full md:w-[calc(50%-2rem)] ${!isLeft ? 'pl-12 md:pl-8' : 'hidden md:block invisible'}`}>
    {!isLeft && (
      <div class="bg-brand-light dark:bg-gray-800 p-6 rounded-2xl shadow-sm border border-gray-100 dark:border-gray-700 hover:shadow-md transition-all duration-300 transform hover:-translate-y-1">
        <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-1">{title}</h3>
        <div class="flex flex-wrap items-center gap-x-4 gap-y-2 text-sm text-gray-500 dark:text-gray-400 mb-4">
          <span class="flex items-center gap-1 font-semibold text-brand-blue">
            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-red-500"><path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/><circle cx="12" cy="10" r="3"/></svg>{company}</span>
          <span class="flex items-center gap-1">
            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-red-500"><rect width="18" height="18" x="3" y="4" rx="2" ry="2"/><line x1="16" x2="16" y1="2" y2="6"/><line x1="8" x2="8" y1="2" y2="6"/><line x1="3" x2="21" y1="10" y2="10"/></svg>{period}</span>
        </div>
        <p class="text-gray-600 dark:text-gray-400 leading-relaxed">{description}</p>
      </div>
    )}
  </div>
</div>