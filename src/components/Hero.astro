---
import { Image } from 'astro:assets';
import profileImage from '../assets/enlabe.jpeg';
---

<section class="relative flex-grow min-h-screen flex flex-col items-center justify-center py-[100px] px-4" id="home">
  <div class="container max-w-4xl mx-auto flex flex-col items-center text-center gap-8 relative z-10">
    
    <div class="relative group">
      <div class="w-48 h-48 md:w-56 md:h-56 rounded-full overflow-hidden border-4 border-white dark:border-gray-800 shadow-2xl transition-transform duration-500 hover:scale-105 grayscale hover:grayscale-0">
        <Image 
          src={profileImage} 
          alt="Bald profile picture of Enrique Lazo Bello" 
          width={224} 
          height={224} 
          class="w-full h-full object-cover"
          loading="eager"
          decoding="sync"
          fetchpriority="high"
        />
      </div>
    </div>

    <div class="space-y-4 max-w-2xl">
      <h1 class="text-4xl md:text-6xl font-black tracking-tight text-brand-dark dark:text-white leading-tight">
         Hi, I'm a Senior <br>
         <span class="text-transparent bg-clip-text bg-gradient-to-r from-brand-blue to-brand-dark dark:from-white dark:to-gray-400">Software Engineer.</span>
      </h1>
      <p class="text-lg md:text-xl text-gray-600 dark:text-gray-400 font-light leading-relaxed flex items-center justify-center gap-2">
        I'm Enrique Lazo Bello, a Tech Lead & Cloud Architect with +10 years of experience based in Lima, Per√∫.
      </p>
    </div>

    <div class="flex items-center gap-4 mt-4">
       <a href="https://github.com/enlabedev" target="_blank" class="p-3 bg-white dark:bg-gray-800/50 rounded-full hover:bg-brand-blue transition-all text-gray-500 hover:text-white border border-transparent shadow-sm" aria-label="GitHub Profile">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0 3 1.5-2.64-.5-5.36.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/></svg>
       </a>
       <a href="https://www.linkedin.com/in/enlabe/" target="_blank" class="p-3 bg-white dark:bg-gray-800/50 rounded-full hover:bg-brand-blue transition-all text-gray-500 hover:text-white border border-transparent shadow-sm" aria-label="LinkedIn Profile">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/><rect width="4" height="12" x="2" y="9"/><circle cx="4" cy="4" r="2"/></svg>
       </a>
       <a href="#contact" class="p-3 bg-white dark:bg-gray-800/50 rounded-full hover:bg-brand-blue dark:hover:bg-brand-blue transition-all text-gray-500 dark:text-gray-400 hover:text-white dark:hover:text-white border border-transparent hover:border-brand-blue dark:hover:border-brand-blue shadow-sm hover:shadow-md" aria-label="Email Me">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-mail"><rect width="20" height="16" x="2" y="4" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>
        </a>

    </div>
  </div>
  
  <a href="#about" class="absolute bottom-10 left-0 right-0 mx-auto w-fit flex flex-col items-center gap-2 text-sm font-medium text-gray-400 animate-bounce cursor-pointer z-20" aria-label="Scroll down to About section">
    Scroll Down
    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m6 9 6 6 6-6"/></svg>
  </a>
</section>